
<div class="container">
	<div class="p-5">
		<div class="card">
			<div class="card-header d-none" id="message-center-header">
				<div class="alert alert-success" id="message-center">

				</div>
			</div>
			<div class="card-body">
				<%= form_for @link, remote: true do |form| %>
					<h4 class='card-title'>Enter a URL to shorten</h4>
					<%= form.text_field :original_url, class: "form-control" %>
					<hr class="my-3"/>
					<h5 class='card-title'>Enter Slug (optional)</h5>
					<%= form.text_field :slug, class: "form-control" %>
					<%= form.submit "Shorten", class: "btn btn-primary mt-3"%>
				<% end %>
			</div>
		</div>
	</div>
</div>

